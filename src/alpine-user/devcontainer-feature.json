{
  "name": "alpine-user",
  "id": "alpine-user",
  "version": "0.0.3",
  "description": "Create a user on alpine",
  "documentationURL": "https://github.com/cirolosapio/devcontainers-features/tree/main/src/alpine-user",
  "options": {
    "user": {
      "type": "string",
      "default": "vscode",
      "description": "The name of the user to create"
    },
    "uid": {
      "type": "string",
      "default": "1000",
      "description": "The uid of the user to create"
    },
    "userFolders": {
      "type": "string",
      "default": "",
      "description": "Space-separated list of folders to chown to the user"
    }
  }
}